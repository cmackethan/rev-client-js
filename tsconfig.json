{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "strict": true,
    "inlineSources": true,
    "skipLibCheck": false,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
      "src/**/*"
  ],
  "typeAcquisition": {"enable": true},
  "exclude": [
    "node_modules"
  ]
}